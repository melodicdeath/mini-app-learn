/* pages/test4/test4.wxss */

.container4 {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 5px;
  font-size: 14pt;
}

.header {
  font-size: 14px;
  background-color: lightgray;
}

.header navigator {
  float: right;
}

.footer {
  width: 100%;
  height: 50px;
  background-color: darkkhaki;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
}

.footer navigator {
  width: 50%;
  text-align: center;
}

.list {
  margin-top: 5px;
  margin-bottom: 50px;
}

.item {
  width: 100%;
  height: 100%;
  padding: 0;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #ddd;
  align-content: flex-start;
  align-items: center;
}

.list .item image {
  width: 80px;
  height: 80px;
}

.item_desc {
  width: 100%;
  height: 100%;
}

.item_desc .item_desc_title {
  display: inline-block;
  margin-left: 5px;
}

.item_desc view {
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 5px;
}

.item_desc view image {
  max-width: 40px;
  max-height: 40px;
}

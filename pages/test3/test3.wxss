/* pages/test3/test3.wxss */

.container3 {
  width: 80px;
	height: 26px;
  display: flex;
  justify-content: center;
  flex-direction: row;
  border: 1px solid #ccc;
	border-radius: 3px;
  margin: 0 auto;
  text-align: center;
}

/*普通样式*/

.normal {
  color: black;
}

/*禁用样式*/

.disabled {
  color: #ccc;
}

input {
  width: 40px;
  height: 26px;
  float: left;
  text-align: center;
  font-size: 12px;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

text {
  width: 19px;
  line-height: 26px;
}

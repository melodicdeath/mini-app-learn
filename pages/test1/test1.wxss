/* pages/test/test1.wxss */

.container1 {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: row;
  background: darkgoldenrod;
}

.nav_left {
  text-align: center;
  width: 25%;
  background: #f5f5f5;
}

.nav_left_item {
  /*每个高30px*/
  height: 30px;
  /*垂直居中*/
  line-height: 30px;
  /*再设上下padding增加高度，总高42px*/
  padding: 6px 0;
  /*只设下边线*/
  border-bottom: 1px solid #dedede;
  /*文字14px*/
  font-size: 14px;
}

.nav_left_item.active{
  /*背景色变成白色*/
  background: #fff;
}

.content {
  display: flex;
  width: 75%;
  /* height: 100%; */
  flex-wrap: wrap;
  align-content: flex-start;
}

.content_item {
  display: flex;
  flex-direction: column;
  width: 33.33%;
  height: 80px;
  background-color: gray;
  justify-content: center;
  align-items: center;
}

.content_item image {
  width: 50px;
  height: 30px;
}

.content_item text {
  /*给text设成块级元素*/
  display: block;
  margin-top: 5px;
  font-size: 10px;
  /*设置文字溢出部分为...*/
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
